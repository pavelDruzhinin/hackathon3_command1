@{
    Layout = null;
}
@model RosBets.Models.RegUser

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация пользователя</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="back-layer">
        @{Html.RenderAction("RenderHeader", "Home");}
            <section class="registration-index background-main">
                <div class="registration-box container">
                    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal registration-form" }))
            {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MiddleName, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.MiddleName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Mail, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Mail, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.Mail)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.City, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(m => m.City)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 form-input">
                                <input class="form-btn" type="submit" id="Register" name="Register" value="Зарегистрироваться" />
                            </div>
                        </div>
                        //@Html.AntiForgeryToken()
                    }
                </div>
            </section>

            @{Html.RenderPartial("footer");}
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/jqueryval");
        
    </div>
</body>
</html>