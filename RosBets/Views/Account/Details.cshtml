@{
    Layout = null;
}
@model RosBets.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Личный кабинет</title>
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/SearchHistory.js")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/_registration-form.css")
            <style>
            a.ChangePass {
                margin: 20px 0 0 0;
                line-height: 40px;
                font-size: 1em;
                padding: 0 20px 0 20px;
                text-align: center;
                color: #EDF2F4;
                height: 40px;
                border-radius: 40px;
                background: #D90429;
                border: none;
                box-sizing: border-box;
                box-shadow: 0 8px 18px -8px #D90429;
                transition: all .2s ease-in-out;
                align-self:center
            }

                a.ChangePass:hover {
                    box-shadow: 0 8px 18px -3px #D90429;
                }

                /*a.ChangePass:active {
                    background: rgb(33,147,90);
                    box-shadow: 0 3px rgb(33,147,90) inset;
                }*/
        </style>
</head>

<body>
    <div class="changepass-box container" id="back-layer">
        @{Html.RenderAction("RenderHeader", "Home");}
        <section class="login-index background-main">
            <table class="table table-bordered table-line" id="ourtable">
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.FirstName)</td>
                    <td rowspan="1" class="table-td">@Model.FirstName</td>
                </tr>
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.LastName)</td>
                    <td rowspan="1" class="table-td">@Model.LastName</td>
                </tr>
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.MiddleName)</td>
                    <td rowspan="1" class="table-td">@Model.MiddleName</td>
                </tr>
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.Mail)</td>
                    <td rowspan="1" class="table-td">@Model.Mail</td>
                </tr>
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.City)</td>
                    <td rowspan="1" class="table-td">@Model.City</td>
                </tr>
                <tr>
                    <td rowspan="1" class="table-td">@Html.LabelFor(m => m.Phone)</td>
                    <td rowspan="1" class="table-td">@Model.Phone</td>
                </tr>


            </table>
            </section>
    </div>
    <div>
        <a href="~/Account/ChangePassword/@Model.Id" class="ChangePass"> Изменить пароль </a>
    </div>

 
    @{Html.RenderPartial("footer");}
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval");
</body>
</html>