@model List<RosBets.Models.Sport>
<div class="left-menu col-md-2 col-xs-12">
    <h2 class="left-menu-header">Линия</h2>
    <!--Championship toggle list start-->
    <div class="panel-group toggle-block">
        <div class="panel panel-default">
            @foreach (var sport in Model)
            {
                <div class="toggle-list-header panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#@sport.Id">@sport.Name</a><!--kind of sport-->
                    </h4>
                </div>
                <div id="@sport.Id" class="panel-collapse collapse toggle-list">
                    <ul class="list-group">
                        <!--Championship list-->
                        @foreach (var championship in sport.Championships)
                        {
                            <li><a href="/Line/@championship.Id">@championship.Name</a></li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
    <!--Championship toggle list end-->
</div>
