<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--header-->
    <header class="header">
        <div class="row">
            <!--logo-->
            <div class="main-logo col-md-2">
                @Html.ActionLink("RosBets", "Index", "Home", new { @class = "main-logo-link" })
            </div>
            <!--navigation-->
            <div class="col-md-6">                
                    <nav class="nav">                     
                        <ul class="nav-list">
                            <li class="nav-link"><a href="#">АПЛ</a></li>
                            <li class="nav-link"><a href="#">РФПЛ</a></li>
                            <li class="nav-link"><a href="#">НХЛ</a></li>
                        </ul>
                    </nav>                
            </div><!--navigation-->
            <div class="user-navigation col-md-4">
            </div>
         </div>
    </header><!--header-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
