<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/owl.carousel.css")
</head>
<body>
    <div id="back-layer">
        @{Html.RenderAction("RenderHeader", "Home");}
        <section id="section" class="index-page">
            <div class="row no-gutters">
                <div class="left-menu col-md-2 col-xs-12">
                    @{Html.RenderAction("RenderLineSelect", "Home");}
                </div>
            <div class="main background-main col-md-8 col-xs-12">
                @RenderBody()
            </div>
                <div class="cupon-menu col-md-2 col-xs-12">
                    @{Html.RenderAction("RenderCoupon", "Bet");}
                </div>
            </div>
        </section>
        @{Html.RenderPartial("footer");}
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/owl.carousel")
        @RenderSection("scripts", required: false)
    </div>
    <script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            loop: true,
            nav: true,
            items: 1,
            navText: ["<img src='/Content/img/long-arrow-left.png'>", "<img src='/Content/img/long-arrow-right.png'>"],
            pagination: true,
            loop: true,
            autoPlay: 300

        });
    });
    </script>
</body>
</html>
